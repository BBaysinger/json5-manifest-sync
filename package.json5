{
  // Package name used by npm and consumers.
  "name": "json5-manifest-sync",
  // Release version (keep in sync with git tags).
  "version": "0.1.3",
  // Short summary shown in package registries and tooling.
  "description": "Sync package.json5 files from canonical package.json while preserving key comments.",
  // Package author metadata.
  "author": {
    // Author display name.
    "name": "Bradley Baysinger",
    // Author or project homepage URL.
    "url": "https://github.com/BBaysinger",
  },
  // ESM-only package.
  "type": "module",
  // Runtime entrypoint for Node.
  "main": "./dist/json5-manifest-sync.js",
  // TypeScript declaration entrypoint.
  "types": "./dist/json5-manifest-sync.d.ts",
  // Conditional exports map for importers.
  "exports": {
    // Default package export.
    ".": {
      // Types path for editors and TS tooling.
      "types": "./dist/json5-manifest-sync.d.ts",
      // JavaScript module path.
      "default": "./dist/json5-manifest-sync.js",
    },
  },
  // CLI command mapping installed in node_modules/.bin.
  "bin": {
    // Executable command name and target script.
    "json5-manifest-sync": "./dist/json5-manifest-sync.js",
  },
  // Files published with the package.
  "files": [
    // Compiled JavaScript and type declarations.
    "dist",
    // Package usage and installation documentation.
    "README.md",
    //
    "CHANGELOG.md",
  ],
  // Development and release scripts.
  "scripts": {
    // Compile TypeScript to dist/.
    "build": "tsc -p tsconfig.json",
    // Format all project files.
    "format": "prettier . --write",
    // Validate formatting in CI.
    "format:check": "prettier . --check",
    // Run tests once.
    "test": "vitest run",
    // Run tests in watch mode.
    "test:watch": "vitest",
    // Auto-build when installed from git.
    "prepare": "npm run build",
  },
  // Supported Node.js runtime versions.
  "engines": {
    // Minimum Node version required by this package.
    "node": ">=18",
  },
  // Runtime dependencies required by the CLI.
  "dependencies": {
    // Fast file globbing for package.json discovery.
    "glob": "^11.0.1",
    // Apply .gitignore rules when scanning.
    "ignore": "^7.0.4",
  },
  // Tooling dependencies used only for development.
  "devDependencies": {
    // Node type definitions for TypeScript.
    "@types/node": "^22.13.10",
    // Code formatting tool.
    "prettier": "^3.8.1",
    // TypeScript compiler.
    "typescript": "^5.8.2",
    // Test runner.
    "vitest": "^2.1.9",
  },
}